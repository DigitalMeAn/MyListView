<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="XML" injector-id="xml">
      <display-name>LinearLayout</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("LinearLayout"))]]></place>
    </injection>
    <injection language="JAVA" injector-id="xml">
      <display-name>activity/@name</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("name")).withNamespace(string().equalTo("http://schemas.android.com/apk/res/android")).withParent(xmlTag().withLocalName(string().equalTo("activity")))]]></place>
    </injection>
    <injection language="JAVA" injector-id="xml">
      <display-name>manifest</display-name>
      <place><![CDATA[xmlTag().withLocalName(string().equalTo("manifest"))]]></place>
    </injection>
    <injection language="JAVA" injector-id="xml">
      <display-name>style/@parent</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("parent")).withParent(xmlTag().withLocalName(string().equalTo("style")))]]></place>
    </injection>
  </component>
</application>